<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff000000">

    <TextView
        android:id="@+id/textview1"
        android:text="            Take A Picture And Upload it To DropBox!"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="88dp"
        android:textColor="#fffdfbff" />

<Button android:id="@+id/button1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Take Picture!"
    android:layout_below="@+id/textview1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="43dp"
    android:backgroundTint="#ffff4629"
    android:textColor="#9ffcfdff" />

    <Button
        android:id="@+id/list_item"
        android:text="List All Files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageview1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:id="@+id/upload_pics"
        android:text="Upload Pictures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:layout_marginTop="29dp"
        android:layout_alignLeft="@+id/list_item"
        android:layout_alignStart="@+id/list_item"
        android:textColor="#fffeff4d"
        android:background="#ff3f34ff" />

    <ImageView android:id="@+id/imageview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_below="@+id/upload_pics"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:layout_marginTop="44dp"
        android:layout_alignLeft="@+id/list_item"
        android:layout_alignStart="@+id/list_item" />

</RelativeLayout>
